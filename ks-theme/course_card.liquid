<div class="courses-grid-item" title="{{ course.name }}" style="max-width: 240px; max-height: 360px;">
  <a href="{{ course.page_path }}">
    <img src="{{ course.image_url }}" alt="{{ course.name }} thumbnail"/>
  </a>
  <div class="courses-grid-item-info">
    <a href="{{ course.page_path }}">
      <p class="courses-grid-item-field">{{ course.org }}</p>
      <p class="courses-grid-item-field">{{ course.number }} - v{{ course.version }}</p>
      <p class="courses-grid-item-name line-clamp-2-temp">{{ course.name }}</p>
      <p class="courses-grid-item-field">{{ "starts" | t }}:&nbsp;{{ course.start_display }}</p>
      <div style="display: flex; justify-content: space-between;">
        <p class="courses-grid-item-field-2" style="margin: 0;">{{ course.titlelized_type }}</p>
        <p class="courses-grid-item-field">
          <svg xmlns="http://www.w3.org/2000/svg" style="color: rgb(251, 191, 36); height: 1rem; width: 1rem; vertical-align: top;" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          {% if course.rating > 0 %}
            {{ course.rating }}/5 <span style="opacity: 60%;">({{ course.abbreviated_review_count }})</span>
          {% else %}
            No ratings yet
          {% endif %}
        </p>
      </div>
      {% assign visible_metadata_fields = course.metadata_fields | where: "show_in_preview" %}
      {% for metadata_field in visible_metadata_fields %}
        <p class="courses-grid-item-field">{{ metadata_field.name }}:&nbsp;{{ metadata_field.value }}</p>
      {% endfor %}
    </a>
    <!-- {{ course.favorites_dropdown }} -->
  </div>
</div>
